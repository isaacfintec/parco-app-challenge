{
  "name": "parco-app-challenge",
  "version": "1.0.0",
  "description": "parco-app-challenge",
  "main": "./lib/server.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "clean": "rimraf ./lib",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:dev": "env NODE_ENV=test nodemon --watch . --ext ts --exec \"mocha -r ts-node/register src/**/*.spec.ts\"",
    "development": "env NODE_ENV=test nodemon --watch . --ext ts lib/server.js",
    "test": "env NODE_ENV=test mocha -r ts-node/register src/**/*.spec.ts",
    "transpile": "tsc --project ./",
    "preversion": "npm-run-all format lint test",
    "build": "npm-run-all clean transpile",
    "postinstall": "npm run build",
    "start": "node ./lib/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaacfintec/parco-app-challenge.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/isaacfintec/parco-app-challenge/issues"
  },
  "homepage": "https://github.com/isaacfintec/parco-app-challenge#readme",
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "@types/chai": "4.3.5",
    "@types/express": "4.17.17",
    "@types/mocha": "10.0.1",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "chai": "4.3.7",
    "chai-http": "4.4.0",
    "eslint": "8.44.0",
    "git-commit-msg-linter": "5.0.4",
    "mocha": "10.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-jwt": "8.4.1",
    "express-validator": "6.14.2",
    "helmet": "7.0.0",
    "http-status-codes": "2.2.0",
    "jsonwebtoken": "9.0.1",
    "mongoose": "7.4.2",
    "morgan": "1.10.0",
    "sequelize": "6.32.1",
    "sqlite3": "5.1.6"
  },
  "nodemonConfig": {
    "ignore": [
      "./dist",
      "./dist/**"
    ],
    "watch": [
      "./**/**"
    ],
    "ext": "js,json,mjs,ts,mock"
  }
}
